<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/color2"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.example.prashant.mathl.LearnArithmeticMainActivity">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Addition"
        android:id="@+id/text1"
        android:gravity="center"
        android:onClick="add"
        android:clickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
       />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Subtraction"
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:gravity="center"
        android:onClick="sub"
        android:clickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Multiplication"
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:gravity="center"
        android:onClick="mul"
        android:clickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
       />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Division"
        android:id="@+id/text4"
        android:layout_below="@+id/text3"
        android:gravity="center"
        android:onClick="div"
        android:clickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        />
    
</RelativeLayout>
