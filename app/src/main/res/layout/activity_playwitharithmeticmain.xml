<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/color3"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.example.prashant.mathl.PlayWithArithmeticMainActivity">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="A-Replay"
        android:id="@+id/text1"
        android:gravity="center"
        android:onClick="areplay"
        android:clickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="132dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Treasure Trove"
        android:id="@+id/text2"
        android:gravity="center"
        android:onClick="treasuretrove"
        android:clickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:layout_below="@+id/text1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        
</RelativeLayout>
