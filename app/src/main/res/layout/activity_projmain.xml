<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#4863A0"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="LEARN NUMBERS"
            android:id="@+id/text1"
            android:gravity="center"
            android:onClick="learnnum"
            android:clickable="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="PLAY WITH NUMBERS"
            android:id="@+id/text2"
            android:layout_below="@+id/text1"
            android:gravity="center"
            android:onClick="findnum"
            android:clickable="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="LEARN ARITHMETIC"
            android:id="@+id/text3"
            android:layout_below="@+id/text2"
            android:gravity="center"
            android:onClick="identifypic"
            android:clickable="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="PLAY WITH ARITHMETIC"
            android:id="@+id/text4"
            android:layout_below="@+id/text3"
            android:onClick="gesture"
            android:clickable="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/primary_text_dark"/>



    </RelativeLayout>
</ScrollView>